@model DAL.Models.Bakery
<div style="margin-left:120px;margin-top:100px;">
    @{
        ViewBag.Title = "EditBakery";
        Layout = "~/Views/Shared/Layout-admin.cshtml";
    }


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <p>Nhập Vào Tên Bánh :</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                <p>Nhập Vào Giá Bánh :</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.ngaypost, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ngaypost)
                    @Html.ValidationMessageFor(model => model.ngaypost)
                </div>
            </div>

            <div class="form-group">
                <p>Nhập Vào VAT :</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.VAT)
                    @Html.ValidationMessageFor(model => model.VAT)
                </div>
            </div>

            <div class="form-group">
                <p>Nhập Vào Số Lượng Bánh :</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.count)
                    @Html.ValidationMessageFor(model => model.count)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @{ Html.RenderAction("GalleryPicker", "Admin");}
                   @if (Model.images != null)
                   {
                    <img src="~/HinhAnh/@Model.images.nameImage" style="width:30%;height:150px" class="mfp-image-holder" id="image-show" />
                   }
                   else
                   {
                    <img src="~/HinhAnh/abc.jpg" style="width:30%;height:150px" class="mfp-image-holder" id="image-show" />

                   }
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-info" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>