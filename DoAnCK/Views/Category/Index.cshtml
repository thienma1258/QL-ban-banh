@model IEnumerable<DAL.Models.Category>
<div style="margin-left:120px;margin-top:100px;">
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/Layout-admin.cshtml";
    }
    <table class="table">
        <tr>
            <th>
                <p>Tên loại :</p>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "EditCategory", new { id = item.Id }) |                 
                    @Html.ActionLink("Xóa", "DeleteCategory", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>