@model IEnumerable<DAL.Models.Introduction>
<div style="margin-left:120px;margin-top:100px;">
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/Layout-admin.cshtml";
    }
    <table class="table">
        <tr>
            <th>
                <h1 <p style="text-align:center"> Thông báo </p> </h1>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modeltitle => item.title)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "EditIntroduce", new { id = item.Id }) |
                     @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "DeleteIntroduce", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
<a href="/Introduce/AddIntroduce" class="btn btn-success">Thêm bài viết</a>
</div>
