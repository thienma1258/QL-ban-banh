@model IEnumerable<DAL.Models.LogUser>

@{
    ViewBag.Title = "Log";
    Layout = "~/Views/Shared/Layout-admin.cshtml";
}
<style>
    h2{
        margin:30px;
    }
     #image-show{
          background-color:#fff;
    border:1px solid red;    
    height:100px;
    border-radius:50%;
    -moz-border-radius:50%;
    -webkit-border-radius:50%;
    width:100px;

    }
</style>
<div style="margin-left:120px;margin-top:100px;">
    <h2>Log</h2>
    <a class="pull-right" href="/AccountManager/DeleteAll">Xóa toàn bộ lịch sử</a>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bakeryuser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bakeryuser.Email)
            </th>
            <th>
               Miêu tả
            </th>
            <th>
Hình ảnh
                        </th>
            <th>
                @Html.DisplayNameFor(model => model.datetime)
            </th>
         
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(model => item.bakeryuser.UserName)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.bakeryuser.Email)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.logstring)
                </td>
                <td>
    @{
        if (item.bakeryuser.representImage == null)
        {
            <img src="/HinhAnh/abc.jpg" id="image-show" />
        }
        else
        {
            <img src="/HinhAnh/@item.bakeryuser.representImage.nameImage" id="image-show" />
        }
    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datetime)
                </td>
                <td></td>
            </tr>
        }

    </table>
    
</div>