@model IEnumerable<DoAnCK.Models.BakeryRateMean>
@using DoAnCK.Models
@using DAL.Models


@{
   
    }

<table class="table">
    <tr>
        <th>
            <h1 <p style="text-align:center">  </p> </h1>
            <li style="display: inline-block;font-size:10px">
                @Html.ActionLink("Theo ngày", "Rateday")

            </li>
            <li style="display: inline-block;font-size:10px">
                @Html.ActionLink("Theo tháng", "RateMonth")

            </li>
            <li style="display: inline-block;font-size:10px">
                @Html.ActionLink("Theo năm", "RateYear")

            </li>
        </th>

    </tr>
 
 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @{
        var dem = 0;
        foreach (var item in Model)
        {
            dem = dem+1;
        <div style="">
          
            <ul>

                <td> <h3 style="color:darkorange;font-family:'Bookman Old Style';font-size:15px">@dem : @item.bakery.Name</h3></td>
                
                <tr>
                    <td>
                        @if (item.bakery.images != null)
                        {
                            <a style="" href="~/Home/Details/@item.bakery.ID">  <img  src="~/HinhAnh/@item.bakery.images.nameImage" alt="" width="100" height="50"></a>
                        }
                        </td>

                    <td>
                        
                        
                        <div style="">
                            <h3 class="fa fa-star" style="font-size:15px"> Rating: @Math.Round(item.damp_mean, 2) </h3><br />



                            @if (@item.damp_mean > 4)
                {
                                <h3 class="fa fa-thumbs-o-up" style="font-size:15px"> Quality: Good </h3>
                            }
                            else if (@item.damp_mean >= 3 && @item.damp_mean <= 4)
                            {
                                <h3 class="fa fa-thumbs-o-up" style="font-size:15px">
                                    Quality:  Normal
                                </h3>
                            }
                            else
                            {
                                <h3 class="fa fa-thumbs-o-up" style="font-size:15px">
                                    Quality: Bad
                                </h3>
                            }
                            <br />
                         @*<h3 class="fa fa-user-times" style="font-size:x-large">Rating Date:  @item.rating.ngayrate.Date.ToString("dd-MM-yyyy")</h3>*@
                        </div>
                </td>
                </tr>





            
            </ul>

</div>
        }
       
    }
    <th>
        <li style="display: inline-block;font-size:15px">
            @Html.ActionLink("Xem Thêm", "RateAll")

        </li>
    </th>
</table>

