<!-- slider -->
@model IEnumerable<DAL.Models.Slider>
@using DAL.Models
<div class="index-banner">
    <div class="wmuSlider example1" style="height: 438px;">
        <div class="wmuSliderWrapper">
            @foreach (var item in Model)
            {
                <article style="position: absolute; width: 100%; opacity: 0;">
                    <div class="banner-wrap">
                        <div class="slider-left">
                            <img src="~/HinhAnh/@item.image.nameImage" alt="" style="width:650px;height:510px">
                        </div>
                        <div class="slider-right">
                            <div class="btn">@Html.ActionLink("Shop Now", "Shop")</div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </article>
            }

        </div>
       
    </div>
    <script>
        $('.example1').wmuSlider();
    </script>
</div>  