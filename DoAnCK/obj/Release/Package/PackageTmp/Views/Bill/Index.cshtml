@model IEnumerable<DAL.Models.Bill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout-admin.cshtml";
}
<div style="margin-left:120px;margin-top:100px;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nameuser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addressuser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totalprice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nameuser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addressuser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Totalprice)
                </td>
                <td>
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Xoa", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>