@model DAL.Models.Slider

@{
    ViewBag.Title = "AddSlider";
    Layout = "~/Views/Shared/Layout-admin.cshtml";
}


<div style="margin-left:120px;margin-top:100px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thêm Slider</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Id)
                    @Html.ValidationMessageFor(model => model.Id)
                </div>
            </div>

            <div class="form-group">
                <p>Nhập vào poisition :</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.position)
                    @Html.ValidationMessageFor(model => model.position)
                </div>
            </div>
            <div class="form-group">

                @{ Html.RenderAction("GalleryPicker", "Admin");}
                <img src="" style="width:30%;height:150px" class="mfp-image-holder" id="image-show" />

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>
