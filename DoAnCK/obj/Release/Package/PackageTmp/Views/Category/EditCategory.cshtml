@model DAL.Models.Category
<div style="margin-left:120px;margin-top:100px;">
    @{
        ViewBag.Title = "EditCategory";
        Layout = "~/Views/Shared/Layout-admin.cshtml";
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
               <p>Nhập vào tên loại: </p><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-info" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>